{
  "extends": [
    "eslint:recommended",
    "plugin:package-json/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["json", "prettier", "package-json"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "env": {
    "node": true,
    "commonjs": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": "error"
  }
}
